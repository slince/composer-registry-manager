{
    "name": "slince/composer-registry-manager",
    "description": "Composer mirrors manager",
    "keywords": ["composer repository", "composer mirror", "switch composer mirror", "composer", "mirror"],
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Slince",
            "email": "taosikai@yeah.net"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "composer-plugin-api": "^1.1|^2.0"
    },
    "require-dev": {
        "composer/composer": "^1.5|^2.0",
        "phpunit/phpunit": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Slince\\Crm\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Slince\\Crm\\Tests\\": "./tests"
        }
    },
    "extra":{
        "class": "Slince\\Crm\\RepositoryManager"
    }
}
